<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ClimateClue.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorLightBlue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/alert_background</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/alert_background</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ClimateClue.Theme.Text">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="ClimateClue.Theme.Text.Bold" parent="ClimateClue.Theme.Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ClimateClue.Theme.Text.Large" parent="ClimateClue.Theme.Text">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="ClimateClue.Theme.Text.Small" parent="ClimateClue.Theme.Text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ClimateClue.Theme.Text.SmallXX" parent="ClimateClue.Theme.Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>